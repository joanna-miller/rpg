<h1>All items</h1>

<% if @items.any? %>
  <% @items.each do |item| %>
    <p><%= link_to item.item, "items/#{item.id}" %></p>
  <% end %>
  <% else %>
    <p> There are no items to display yet. <p>
<% end %>

<% if current_user && current_user.admin %>
  <p><%= link_to "Add an Item", new_item_path %></p>
<% end %>

<%= link_to "Back", '/' %>
