<h1><%= @item.item %></h1>
<h3>Type: <%= @item.item_type %></h3>
<h3>Stat: <%= @item.stat %></h3>

<% if current_user %>
  <% if current_user.admin == true %>
    <p><%= link_to "Edit item", edit_item_path(@item) %></p>
    <p><%= link_to "Delete item", "/items/#{@item.id}", :confirm => "Are you sure?", :method => :delete %></p>
  <% end %>
<% end %>

<%= link_to "Back", '/items' %>