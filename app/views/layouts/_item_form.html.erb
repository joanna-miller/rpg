<%= render "layouts/errors", :object => @item %>

<%= form_for @item do |f| %>
  <%= f.label :item %>
  <%= f.text_field :item %>
  <%= f.label :item_type %>
  <%= f.select :item_type, ["Magic", "Melee", "Defense", "Ranged"] %>
  <%= f.label :stat %>
  <%= f.select :stat, 1..10 %>
  <%= f.submit %>
<% end %>